  "version": "0.2.0",
  "configurations": [
    {
      "request": "launch",
      "name": "gameplay_computer",
      "type": "node",
      "program": "${workspaceFolder}/main.ts",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "/Users/steve/.deno/bin/deno",
      "runtimeArgs": [
        "run",
        "--unstable-kv",
        "--inspect-wait",
      ],
    },
    {
      "request": "launch",
      "name": "connect4_agent_rand",
      "type": "node",
      "program": "${workspaceFolder}/agents/agent.ts",
      "args": ["connect4_agent_rand", "8001"],
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "/Users/steve/.deno/bin/deno",
      "runtimeArgs": [
        "run",
        "--inspect-wait",
      ],
    },
    {
      "request": "launch",
      "name": "connect4_agent_mcts",
      "type": "node",
      "program": "${workspaceFolder}/agents/agent.ts",
      "args": ["connect4_agent_mcts", "8002"],
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "/Users/steve/.deno/bin/deno",
      "runtimeArgs": [
        "run",
        "--inspect-wait",
      ],
    }
  ],
  "compounds": [
    {
      "name": "all",
      "configurations": ["gameplay_computer", "connect4_agent_rand", "connect4_agent_mcts"],
      "stopAll": true
    }
  ]
}
